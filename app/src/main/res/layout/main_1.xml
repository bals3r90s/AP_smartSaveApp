<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Upper section with 6 columns -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/upper_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/column1"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Column 1"
            android:gravity="center"
            android:padding="8dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/column2"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Column 2"
            android:gravity="center"
            android:padding="8dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@+id/column1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/column3"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Column 3"
            android:gravity="center"
            android:padding="8dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@+id/column2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/column4"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Column 4"
            android:gravity="center"
            android:padding="8dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@+id/column3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/column5"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Column 5"
            android:gravity="center"
            android:padding="8dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@+id/column4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/column6"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:text="Column 6"
            android:gravity="center"
            android:padding="8dp"
            android:background="#E0E0E0"
            app:layout_constraintTop_toBottomOf="@+id/column5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Lower section with 2 round buttons -->
    <LinearLayout
        android:id="@+id/lower_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <Button
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Button 1"
            android:background="@drawable/round_button"
            android:layout_margin="16dp"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/button2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="Button 2"
            android:background="@drawable/round_button"
            android:layout_margin="16dp"
            android:textColor="#FFFFFF" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
